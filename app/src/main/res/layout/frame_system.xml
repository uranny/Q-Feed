<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.cardsnap.presentation.vm.SystemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/afilTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    app:affiliation = "@{viewModel.uiState.affiliation}"
                    app:grade = "@{viewModel.uiState.grade}"
                    android:textColor="#607C7C7C"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:ui_text="@{viewModel.uiState.username}"
                    android:textColor="#7C7C7C"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/userImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/img_circle"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{viewModel.uiState.imageUrl}"
                    app:srcCompat="@drawable/baseline_add_24"/>

                <TextView
                    android:id="@+id/messageTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    app:ui_text="@{viewModel.uiState.statusMessage}"
                    android:textColor="#7C7C7C"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tagTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:hashtags="@{viewModel.uiState.hashtags}"
                    android:textColor="#807C7C7C"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/myView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/profileEditBtn"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_radius"
                        android:text="프로필 편집"
                        android:textColor="#7C7C7C"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <android.widget.Button
                        android:id="@+id/logOutBtn"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_radius"
                        android:text="로그아웃"
                        android:textColor="#7C7C7C"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/back_overline"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="나이"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ageTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@{String.valueOf(viewModel.uiState.age) + `세`}"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:gravity="end"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="취미"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/habbitTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                app:ui_text="@{viewModel.uiState.habbies}"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:gravity="end"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="좋아하는 것"
                            android:textColor="#7C7C7C"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/likeTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="5"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                app:ui_text="@{viewModel.uiState.likes}"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </ScrollView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="키"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/heightTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@{String.valueOf(viewModel.uiState.height) + `cm`}"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:gravity="end"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="몸무게"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/kgTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@{String.valueOf(viewModel.uiState.weight) + `kg`}"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:gravity="end"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="싫어하는 것"
                            android:textColor="#7C7C7C"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/hateTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="5"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                app:ui_text="@{viewModel.uiState.dislikes}"
                                android:textColor="#7C7C7C"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/back_overline"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="start"
                        android:text="이상형"
                        android:textColor="#7C7C7C"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idealTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="start"
                        app:ui_text="@{viewModel.uiState.idealType}"
                        android:textColor="#7C7C7C"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
