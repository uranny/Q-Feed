<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF0F5">

    <View
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFF0F5"/>
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/img_6"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/titleBar"
        app:layout_constraintStart_toStartOf="@+id/titleBar"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/editImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_1"
                android:background="@drawable/img_circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center" />
            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="이름을 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="text"
                android:maxLines="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <Spinner
                    android:id="@+id/selectSchool"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_btn"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:entries="@array/schoolNameLst"
                    android:textColor="#7C7C7C"
                    android:textColorHint="#807C7C7C"/>
                <Spinner
                    android:id="@+id/selectGrade"
                    android:entries="@array/schoolGradeLst"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_btn"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#7C7C7C"
                    android:textColorHint="#807C7C7C"/>

            </LinearLayout>
            <EditText
                android:id="@+id/editMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="상태메세지를 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/editTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="해시태그를 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/editAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="나이를 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/editHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="키를 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/editWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="몸무게를 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/editHabby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="취미를 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/editLikeThing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="좋아하는 것을 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/editBadThing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="싫어하는 것을 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="text"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이상형"
                android:padding="15dp"
                android:textSize="18sp"
                android:textColor="#7C7C7C"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/editIdeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="이상형을 입력하세요"
                android:background="@drawable/input_btn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#7C7C7C"
                android:textColorHint="#807C7C7C"
                android:inputType="textMultiLine"
                />
            <TextView
                android:id="@+id/wrongTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="유저 이름, 소속, 이미지, 상태메세지, 해시태그, 나이를 모두 적어주세요"
                android:gravity="center"
                android:visibility="gone"
                android:padding="5dp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="12sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/finishBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="프로필 편집완료"
                android:textColor="#7C7C7C"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_btn"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>