<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gra">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/img_6"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="50dp">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/logo_shadow"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_5"
                android:clipToOutline="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/inputBox"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <LinearLayout
                android:id="@+id/inputBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/inputId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_btn"
                    android:hint="사용자 아이디를 입력하세요"
                    android:textColorHint="#7C7C7C"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:id="@+id/inputPass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_btn"
                    android:hint="비밀번호를 입력하세요"
                    android:textColorHint="#7C7C7C"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/wrongTxt"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#FF0000"
                    android:text="이미 존재하는 이메일입니다."
                    android:layout_marginBottom="5dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/joinBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="다음으로"
                    android:background="@drawable/login_btn"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>